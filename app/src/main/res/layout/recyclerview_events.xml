<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="5sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="2dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="10dp">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="EventName :"
                android:id="@+id/event"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Event :"
                android:id="@+id/eventtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Description :"
                android:id="@+id/desid"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Description :"
                android:id="@+id/desidtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Venue :"
                android:id="@+id/venue"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Venue :"
                android:id="@+id/venuetext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Reg Amount :"
                android:id="@+id/Regmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Reg Amount :"
                android:id="@+id/Regmounttext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Event Speakers :"
                android:id="@+id/eventspeakertext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Event Speakers :"
                android:id="@+id/eventspeaker"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Target Audience :"
                android:id="@+id/targettext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Target Audience :"
                android:id="@+id/target"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Hosting Department :"
                android:id="@+id/hostingtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Hosting Department :"
                android:id="@+id/hosting"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="KeyNote Speaker :"
                android:id="@+id/keynotespeakertext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="KeyNote Speaker :"
                android:id="@+id/keynotespeaker"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="DateOfEvent :"
                android:id="@+id/dateofeventtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="DateOfEvent :"
                android:id="@+id/dateofevent"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="LastDateFor Registration :"
                android:id="@+id/lastdateregtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="LastDateFor Registration :"
                android:id="@+id/lastdatereg"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Published :"
                android:id="@+id/publishedtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Published :"
                android:id="@+id/published"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
