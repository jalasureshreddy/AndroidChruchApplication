<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="5sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="2dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="10dp">
 <LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="MinistryName :"
            android:id="@+id/namerectext"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Name"
            android:id="@+id/namerec"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Gender :"
            android:id="@+id/gendertext"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Gender"
            android:id="@+id/genderrec"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Leader:"
            android:id="@+id/leaderrectext"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Leader"
            android:id="@+id/leaderrec"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="MaxMembers :"
            android:id="@+id/maxmembersrectext"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="MaxMembers"
            android:id="@+id/maxmembersrec"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>